{
    "title": "ModifyAccess",
    "type": "object",
    "properties": {
        "grant": {
            "oneOf": [{
                    "type": "array",
                    "maxItems": 1024,
                    "items": {
                        "type": "object",
                        "properties": {
                            "username": {
                                "type": "string",
                                "minLength": 3,
                                "maxLength": 128,
                                "pattern": "^[a-zA-Z0-9._\\-]{3,128}$"
                            },
                            "password": {
                                "type": "string",
                                "minLength": 3,
                                "maxLength": 128,
                                "pattern": "^\\$2y\\$[^\\s]+$"
                            }
                        }
                    }
                },
                {
                    "type": "null"
                }
            ]
        },
        "revoke": {
            "oneOf": [{
                    "type": "array",
                    "minItems": 0,
                    "maxItems": 1024,
                    "items": {
                        "type": "string",
                        "minLength": 3,
                        "maxLength": 128,
                        "pattern": "^[a-zA-Z0-9._\\-]{3,128}$"
                    }
                },
                {
                    "type": "null"
                }
            ]
        }
    }
}

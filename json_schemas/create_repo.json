{
    "title": "CreateRepo",
    "type": "object",
    "properties": {
        "repo_id": {
            "type": "string",
            "minLength": 4,
            "maxLength": 128,
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_\\-]+[a-zA-Z0-9]$"
        },
        "project_id": {
            "type": "string",
            "pattern": "^[0-9a-zA-Z]{24}$"
        },
        "creator": {
            "type": "string",
            "minLength": 4,
            "maxLength": 255,
            "pattern": "^[\\p{L}\\d_\\-., @<>]+$"
        }
    },
    "required": ["repo_id", "project_id", "creator"]
}
